@model List<ItemWebModel>

@{
    ViewData["Title"] = "";
}

<div id="containerItemCategory">

    <div id="categoryPath" class="gridItemItemCategory">
        <h2>@ViewBag.Category</h2>  <!-- it must be Category object. Also it is the last of SubCategories -->
        <div id="CategoryPathLinks"> <!-- display generalized category. category -> category.SubCategory -> category.Subcategory.Subcategory  -->
            <a href="">Category</a>
            <a href="">SubCategory</a>
        </div>
    </div>

    <div id="containerItemCharacteristics" class="gridItemItemCategory">

    </div>

    <div id="containerItems" class="gridItemItemCategory">

        @foreach (var item in Model)
        {
            <div class="item">
                <img src="~/Item_Images/Black.png" alt="@item.Name"/>
                @item.Name
                @item.Description
            </div>
        }
    </div>

</div>