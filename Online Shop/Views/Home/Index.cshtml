@{
    ViewData["Title"] = "Home Page";
    ViewData["FirstSlide"] = "Slides/1080p-Full-HD-Images.jpg";
    ViewData["SecondSlide"] = "Slides/138728.jpg";
    ViewData["ThirdSlide"] = "Slides/20544381.jpg";
}

<style>
.carousel-inner img {
    height: 75%;
    width: auto; /* This ensures that the width is adjusted proportionally to maintain the image's aspect ratio */
}    
</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container" style="position: relative">
    
    <div id="carouselExampleIndicators" class="carousel slide h-75" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="@ViewData["FirstSlide"]" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@ViewData["SecondSlide"]" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@ViewData["ThirdSlide"]" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    
</div>




<script>
$('.carousel').carousel({
  interval: 6000
})
</script>

