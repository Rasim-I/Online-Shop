@{
    ViewData["Title"] = "Home Page";
    ViewData["FirstSlide"] = "Slides/pictureSlide.png";
    ViewData["SecondSlide"] = "Slides/pictureSlide.png";
    ViewData["ThirdSlide"] = "Slides/pictureSlide.png";
}

<style>
.carousel-inner img {
    height: 100%;
    width: auto; /* This ensures that the width is adjusted proportionally to maintain the image's aspect ratio */
}    
</style>


<div class="containerContentMain">
    
    <div id="carouselPromotion" class="carousel slide grid-itemMain" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselPromotion" data-slide-to="0" class="active"></li>
            <li data-target="#carouselPromotion" data-slide-to="1"></li>
            <li data-target="#carouselPromotion" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="@ViewData["FirstSlide"]" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@ViewData["SecondSlide"]" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="@ViewData["ThirdSlide"]" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselPromotion" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselPromotion" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    
    <div id="categoryMenu" class="grid-itemMain">
        
    </div>

    @await Html.PartialAsync("Partial/_RecommendationItemPartial")
    
    @await Html.PartialAsync("Partial/_RecentItemsPartial")
    

    

    
</div>




<script>
$('.carousel').carousel({
  interval: 6000
})
</script>

