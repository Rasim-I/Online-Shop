@model List<CategoryWebModel>

@{
    Layout = null;
}

<div id="categoryMenu" class="grid-itemMain">

    @foreach (var item in Model)
    {
        <form class="categoryItemForm" asp-controller="Item" asp-action="ItemCategory" method="get">
            <input type="hidden" name="category" value="@item.Name"/>
            <button type="submit" class="categoryItemBtn">
                <div class="categoryItem">
                    @item.Name
                </div>
            </button>
        </form>
    }

</div>